<Window x:Class="WpfApp2class2011.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2class2011"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ToolBar Grid.Row="0" Background="LightBlue">
            <Button Content="Меню 1"/>
            <Button Content="Меню 2"/>
        </ToolBar>
        <Grid Grid.Row="1">
            <ToolBar VerticalAlignment="Top" Background="LightGreen">
                <Button Content="Меню 3"/>
                <Button Content="Меню 4"/>
            </ToolBar>
            <ToolBar VerticalAlignment="Bottom" Background="LightCoral">
                <Label x:Name="timeLabel" Content="Текущее время: "/>
            </ToolBar>
    </Grid>
    </Grid>    
</Window>
